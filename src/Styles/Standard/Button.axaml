    </Style>
  <Style Selector=":is(Button) /template/ rctr|AngledBorder#Background">
    <Setter Property="Background" Value="{TemplateBinding Background}"/>
    <Setter Property="BorderBrush" Value="#A3FFFFFF"/>
    <Setter Property="StrokeThickness" Value="2"/>
    <Setter Property="InnerGlowColor" Value="#40FFFFFF"/>
  </Style>
  <Style Selector=":is(Button) /template/ rctr|AngledBorder#Background,
                  StackPanel.rightButtons > :is(Button):nth-child(1):nth-last-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="4,0,4,0"/>
  </Style>
  <Style Selector=":is(Button) /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{TemplateBinding TextBlock.Foreground}"/>
  </Style>
  
  
  <Style Selector=":is(Button):pointerover:not(:pressed) /template/ rctr|AngledBorder#Background">
    <Setter Property="BorderBrush" Value="#C0FFFFFF"/>
  </Style>
  <Style Selector=":is(Button):pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource StrongForegroundBrush}"/>
  </Style>
  
  
  <Style Selector=":is(Button):disabled /template/ rctr|AngledBorder#Background">
    <Setter Property="Background" Value="#40C9C9C9"/>
    <Setter Property="BorderBrush" Value="#51FFFFFF"/>
    <Setter Property="InnerGlowColor" Value="#20FFFFFF"/>
  </Style>
  <Style Selector=":is(Button):disabled /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource Weak2ForegroundBrush}"/>
  </Style>


  <Style Selector="StackPanel.leftButtons,
                  StackPanel.rightButtons">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Spacing" Value="0"/>
  </Style>
  
  <Style Selector="StackPanel.leftButtons,
                  :is(Button).left">
    <Setter Property="DockPanel.Dock" Value="Left"/>
  </Style>
  <Style Selector="StackPanel.rightButtons,
                  :is(Button).right">
    <Setter Property="DockPanel.Dock" Value="Right"/>
  </Style>
  
  
  
  <Style Selector="StackPanel.leftButtons > :is(Button) /template/ rctr|AngledBorder#Background,
                  StackPanel.rightButtons > :is(Button) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="0"/>
  </Style>
  <Style Selector="StackPanel.leftButtons > :is(Button):nth-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="0,0,0,4"/>
  </Style>
  <Style Selector="StackPanel.leftButtons > :is(Button):nth-last-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="0,4,0,0"/>
  </Style>
  <Style Selector="StackPanel.rightButtons > :is(Button):nth-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="4,0,0,0"/>
  </Style>
  <Style Selector="StackPanel.rightButtons > :is(Button):nth-last-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="0,0,4,0"/>
  </Style>

  <Style Selector=":is(Button).left /template/ rctr|AngledBorder#Background,
                  StackPanel.leftButtons > :is(Button):nth-child(1):nth-last-child(1) /template/ rctr|AngledBorder#Background">
    <Setter Property="CornerRadius" Value="0,4,0,4"/>
  </Style>
</Styles>