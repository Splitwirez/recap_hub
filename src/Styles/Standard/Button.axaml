    </Style>
  <Style Selector="Button /template/ rctr|AngledBorder#ExtBackground">
    <Setter Property="Margin" Value="2"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="2,0,2,0"/>
  </Style>
  <Style Selector="Button /template/ rctr|ImagePresenter#Background">
    <Setter Property="Source" Value="{DynamicResource Button.Idle}"/>
  </Style>
  <Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{TemplateBinding TextBlock.Foreground}"/>
  </Style>
  
  
  <Style Selector="Button:pointerover:not(:pressed) /template/ rctr|ImagePresenter#Background">
    <Setter Property="Source" Value="{DynamicResource Button.Hover}"/>
  </Style>
  <Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource StrongForegroundBrush}"/>
  </Style>
  
  
  <Style Selector="Button:disabled /template/ rctr|ImagePresenter#Background">
    <Setter Property="Opacity" Value="0.25"/>
  </Style>
  <Style Selector="Button:disabled /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource Weak2ForegroundBrush}"/>
  </Style>
  
