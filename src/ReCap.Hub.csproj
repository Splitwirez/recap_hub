<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>enable</Nullable>
    <AvVer>0.10.10</AvVer>
  </PropertyGroup>
  <ItemGroup>
    <Folder Include="Models/" />
    <AvaloniaResource Include="Styles/**/*.axaml" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="Res/UI/**/*.png" />
    <AvaloniaResource Include="Res/Icon/**/*.ico" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaXaml Remove="Styles\Standard\ListBox.axaml" />
    <AvaloniaXaml Remove="Styles\Standard\ListBoxItem.axaml" />
    <AvaloniaXaml Remove="Styles\Standard\TabStrip.axaml" />
    <AvaloniaXaml Remove="Styles\Standard\ToggleButton.axaml" />
    <AvaloniaXaml Remove="Styles\ViewSpecific\HomePage.axaml" />
    <AvaloniaXaml Remove="Styles\ViewSpecific\SaveGame.axaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="$(AvVer)" />
    <PackageReference Include="Avalonia.Desktop" Version="$(AvVer)" />
    <PackageReference Include="Avalonia.Diagnostics" Version="$(AvVer)" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="$(AvVer)" />
  </ItemGroup>
</Project>
