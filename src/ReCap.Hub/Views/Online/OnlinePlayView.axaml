<UserControl x:Class="ReCap.Hub.Views.OnlinePlayView"
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:ReCap.Hub.ViewModels"
            xmlns:v="clr-namespace:ReCap.Hub.Views"
            xmlns:keys="using:ReCap.Hub.Localization.Keys"
            xmlns:dt="using:ReCap.Hub.Data">
    <DockPanel>
		<v:CommandBarView DockPanel.Dock="Top" />
        <HeaderedContentControl x:Name="ServersPane"
                                Header="{DynamicResource {x:Static keys:OnlinePlay.ServersHeader}}"
                                Classes="pane left outermost"
                                MinWidth="200"
                                DockPanel.Dock="Left">
            <DockPanel>
                <ListBox x:Name="ServersList"
                        Classes="fitts-law-list"
                        ItemsSource="{Binding Path=Servers, Source={x:Static dt:HubData.Instance}, Mode=OneWay}"
                        SelectedItem="{Binding SelectedServer, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" Classes="h3"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </HeaderedContentControl>
        <v:ForeignServerView DataContext="{Binding SelectedServer, Mode=OneWay}" />
    </DockPanel>
</UserControl>