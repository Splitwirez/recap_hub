        </Style>
        <Style Selector="FlyoutPresenter.sidePaneOffset">
            <Setter Property="RenderTransform">
                <TranslateTransform X="-160" Y="-300" />
            </Setter>
        </Style>
    </UserControl.Styles>
    <DockPanel>
        <HeaderedContentControl x:Name="SaveGamesPane"
                                Header="Save games"
                                Classes="pane left outermost"
                                DockPanel.Dock="Left">
            <Grid Width="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" MinHeight="30" SharedSizeGroup="Footer" />
                </Grid.RowDefinitions>
                <ListBox x:Name="SaveGamesList"
                        Classes="fitts-law-list"
                        ItemsSource="{Binding Saves}"
                        SelectedItem="{Binding SelectedSave, Mode=TwoWay}"
                        Grid.Row="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Title}" Classes="h4"/>
                                <Grid ColumnDefinitions="Auto,8,Auto"
                                    RowDefinitions="*,*"
                                    HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding CurrentThreatLevel, Mode=OneWay}"
                                            Grid.Column="2"
                                            Grid.Row="0" />
                                    <TextBlock Text="Darkspore threat"
                                            Grid.Column="0"
                                            Grid.Row="0" />
                                    <!--TextBlock Text="{Binding CurrentThreatLevel, StringFormat='Darkspore threat {0}'}" /-->
                                    <TextBlock Text="{Binding CrogenitorLevel, Mode=OneWay}"
                                            Grid.Column="2"
                                            Grid.Row="1" />
                                    <TextBlock Text="Crogenitor level"
                                            Grid.Column="0"
                                            Grid.Row="1" />
                                    <!--TextBlock Text="{Binding CrogenitorLevel, StringFormat='Crogenitor level {0}'}"/-->
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ContentControl Classes="sidePaneFooter"
                                Grid.Row="1">
                    <StackPanel Orientation="Horizontal"
                                Spacing="4">
                        <Button Content="New game"
                                Classes="left"
                                Command="{Binding NewSaveGameCommand}"/>
                    </StackPanel>
                </ContentControl>
            </Grid>
        </HeaderedContentControl>
        <ContentControl x:Name="SelectedSaveArea" Content="{Binding SelectedSave, Mode=OneWay}"/>
    </DockPanel>
</UserControl>