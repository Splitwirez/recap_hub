<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:ReCap.Hub.ViewModels"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:rctr="using:ReCap.Hub.Controls"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            x:Class="ReCap.Hub.Views.HomePageView">
        <Design.DataContext>
            <vm:HomePageViewModel/>
        </Design.DataContext>
    <DockPanel>
        <TabStrip x:Name="TopTabs"
                Theme="{DynamicResource TopTabStrip}"
                DockPanel.Dock="Top">
            <TabStripItem Content="PLAY DARKSPORE" DataContext="{Binding LocalPlayVM}" />
            <TabStripItem Content="JOIN ONLINE GAME" DataContext="{x:Null}" />
        </TabStrip>
        <!--ContentControl DockPanel.Dock="Top" Height="40"/-->
        <ContentControl Content="{Binding #TopTabs.SelectedItem.DataContext}"/>
    </DockPanel>
    <!--ContentControl Classes="homePageChoices">
        <UniformGrid Columns="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Classes="homePageChoice top" Content="PLAY DARKSPORE"/>
            <Button Classes="homePageChoice bottom" Content="JOIN ONLINE GAME"/>
        </UniformGrid>
    </ContentControl-->
</UserControl>