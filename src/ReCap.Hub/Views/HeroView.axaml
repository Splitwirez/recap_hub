<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:v="using:ReCap.Hub.Views"
            xmlns:vm="using:ReCap.Hub.ViewModels"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            x:Class="ReCap.Hub.Views.HeroView"
            Classes="heroCard">
	<StackPanel Orientation="Vertical">
		<TemplatedControl Classes="heroImage" />
		<TextBlock Text="{Binding ShortName, Mode=OneWay}"
				Classes="h4"
				TextWrapping="NoWrap"/>
		<TextBlock Text="{Binding LoreTitle, Mode=OneWay}"
				TextWrapping="Wrap"/>
	</StackPanel>
</UserControl>