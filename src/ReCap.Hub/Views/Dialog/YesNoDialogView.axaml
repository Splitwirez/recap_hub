<UserControl x:Class="ReCap.Hub.Views.YesNoDialogView"
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:ReCap.Hub.ViewModels"
            Theme="{DynamicResource DialogRoot}"
            Width="400">
    <DockPanel>
        <ContentControl Theme="{DynamicResource DialogFooter}"
                        HorizontalContentAlignment="Stretch"
                        DockPanel.Dock="Bottom">
            <DockPanel LastChildFill="False">
                <Button Command="{Binding NoCommand}"
                        Classes="left"
                        DockPanel.Dock="Left">No</Button>
                <Button Command="{Binding YesCommand}"
                        Classes="right"
                        DockPanel.Dock="Right">Yes</Button>
            </DockPanel>
        </ContentControl>
        <HeaderedContentControl Header="{Binding Title, Mode=OneWay}"
                                Theme="{DynamicResource DialogBody}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Content, Mode=OneWay}" VerticalAlignment="Center"/>
            </StackPanel>
        </HeaderedContentControl>
    </DockPanel>
</UserControl>
