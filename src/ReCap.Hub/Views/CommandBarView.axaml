<HeaderedItemsControl x:Class="ReCap.Hub.Views.CommandBarView"
					xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:rctr="using:ReCap.CommonUI"
					xmlns:v="clr-namespace:ReCap.Hub.Views"
					xmlns:vm="using:ReCap.Hub.ViewModels"
					xmlns:keys="using:ReCap.Hub.Localization.Keys"
					ClipToBounds="False">
    <HeaderedItemsControl.Tag>
		<Button Content="{DynamicResource {x:Static keys:HomePage.ShowPreferences}}"
