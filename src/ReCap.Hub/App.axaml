<Application x:Class="ReCap.Hub.App"
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:v="using:ReCap.Hub.Views"
            xmlns:rctr="using:ReCap.CommonUI"
            xmlns:dt="using:ReCap.Hub.Data"
            RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <v:ViewLocator />
    </Application.DataTemplates>
    <Application.Styles>
        <rctr:ReCapTheme />
        <StyleInclude Source="avares://ResurrectionCapsuleHub/ViewSpecificStyles/Global.axaml" />

        <Style Selector=":is(Window)">
            <Setter Property="ExtendClientAreaToDecorationsHint" Value="{Binding Path=UseManagedDecorations, Source={x:Static dt:HubData.Instance}, Mode=OneWay}" />
        </Style>
    </Application.Styles>
</Application>
