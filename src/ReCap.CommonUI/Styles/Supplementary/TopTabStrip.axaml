<ResourceDictionary xmlns="https://github.com/avaloniaui"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ResourceDictionary.MergedDictionaries>
		<ResourceInclude Source="avares://ReCap.CommonUI/Styles/Supplementary/TopTabStripItem.axaml" />
	</ResourceDictionary.MergedDictionaries>


	<ControlTheme x:Key="TopTabStrip"
				TargetType="{x:Type TabStrip}">
        <Setter Property="ItemContainerTheme" Value="{DynamicResource TopTabStripItem}" />
		<Setter Property="Margin" Value="10,0" />
		<Setter Property="Template">
			<ControlTemplate>
				<ItemsPresenter x:Name="PART_ItemsPresenter"
								ItemsPanel="{TemplateBinding ItemsPanel}" />
			</ControlTemplate>
		</Setter>
		<Setter Property="ItemsPanel">
			<ItemsPanelTemplate>
				<WrapPanel />
				<!--
				<StackPanel x:Name="PART_ItemsPanel" Orientation="Horizontal" Spacing="-2"/>
				-->
			</ItemsPanelTemplate>
		</Setter>
	</ControlTheme>
</ResourceDictionary>