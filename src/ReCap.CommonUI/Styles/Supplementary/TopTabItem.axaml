						 StartPoint="0%,0%"
						 EndPoint="0%,100%">
		<GradientStop Offset="0" Color="#AEB3C1CA" />
		<GradientStop Offset="0.25" Color="#9BA1B3BD" />
		<GradientStop Offset="1" Color="#3CA0B1BC" />
		<!- -
		<GradientStop Offset="0.25" Color="#00A1B3BD" />
		<GradientStop Offset="1" Color="#79A0B1BC" />
		- ->
	</LinearGradientBrush>
	<LinearGradientBrush x:Key="TopTabs.Item.Background.Selected"
