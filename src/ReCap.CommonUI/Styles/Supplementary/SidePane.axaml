    <Style Selector=":is(ContentControl).pane.left /template/ rctr|AngledBorderEx#CTPaneBackground,
                    :is(ContentControl).pane.right /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="OpacityMask" Value="{DynamicResource SidePane.OpacityMask.Stretch}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.top /template/ rctr|AngledBorderEx#CTPaneBackground">
    </Style>
    <Style Selector=":is(ContentControl).pane.bottom /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="OpacityMask" Value="{DynamicResource SidePane.OpacityMask.Bottom}"/>
    </Style>

    <Style Selector=":is(ContentControl).pane.left">
        <!--Setter Property="Width" Value="200"/-->
        <Setter Property="Margin" Value="0,0,-8,0"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.left /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="InvertSide" Value="Right"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.left /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="0,0,6,0"/>
    </Style>

    <Style Selector=":is(ContentControl).pane.top">
        <Setter Property="Margin" Value="0,0,0,-8"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.top /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="InvertSide" Value="Bottom"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.top /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="0,0,0,6"/>
    </Style>

    <Style Selector=":is(ContentControl).pane.right">
        <Setter Property="Margin" Value="-8,0,0,0"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.right /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="InvertSide" Value="Left"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.right /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="6,0,0,0"/>
    </Style>

    <Style Selector=":is(ContentControl).pane.bottom">
        <Setter Property="Margin" Value="0,-8,0,0"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.bottom /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="InvertSide" Value="Top"/>
    </Style>
    <Style Selector=":is(ContentControl).pane.bottom /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Padding" Value="0,6,0,0"/>
    </Style>



    <Style Selector=":is(ContentControl).pane.left.outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="BottomLeftInset" Value="{DynamicResource SidePane.Inset}" />
        <Setter Property="TopLeftInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.top.outermost /template/ rctr|AngledBorderEx#CTPaneBackground,
                    :is(ContentControl).pane.top.left-outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="TopLeftInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.top.outermost /template/ rctr|AngledBorderEx#CTPaneBackground,
                    :is(ContentControl).pane.top.right-outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="TopLeftInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.right.outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="TopRightInset" Value="{DynamicResource SidePane.Inset}" />
        <Setter Property="BottomRightInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.bottom.outermost /template/ rctr|AngledBorderEx#CTPaneBackground,
                    :is(ContentControl).pane.bottom.left-outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="BottomLeftInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>
    <Style Selector=":is(ContentControl).pane.bottom.outermost /template/ rctr|AngledBorderEx#CTPaneBackground,
                    :is(ContentControl).pane.bottom.right-outermost /template/ rctr|AngledBorderEx#CTPaneBackground">
        <Setter Property="BottomRightInset" Value="{DynamicResource SidePane.Inset}" />
    </Style>


    <Style Selector=":is(ContentControl).pane.top,
                    :is(ContentControl).pane.bottom">
        <!--Setter Property="Height" Value="50"/-->
    </Style>
