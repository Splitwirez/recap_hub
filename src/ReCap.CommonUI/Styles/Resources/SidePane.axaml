<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:ReCap.CommonUI"
        xmlns:rctr="using:ReCap.CommonUI"
        xmlns:sys="using:System">
	<Styles.Resources>
		<ResourceDictionary>
			<rctr:SlicedImage x:Key="SidePane.Background"
							Source="avares://ReCap.CommonUI/Res/UI/SidePane/Background.png"
							BorderThickness="12,10"/>
			<rctr:SlicedImage x:Key="SidePane.BackgroundOutermost"
							Source="avares://ReCap.CommonUI/Res/UI/SidePane/BackgroundOutermost.png"
							BorderThickness="26,10,12,10"/>

			<rctr:SlicedImage x:Key="SidePane.Background.WithFooter"
