							BorderThickness="26,10,12,10"/>

			<rctr:SlicedImage x:Key="SidePane.FooterBackground"
							Source="avares://ReCap.CommonUI/Res/UI/SidePane/FooterBackground.png"
							BorderThickness="12,10"/>
			<rctr:SlicedImage x:Key="SidePane.FooterBackgroundOutermost"
							Source="avares://ReCap.CommonUI/Res/UI/SidePane/FooterBackgroundOutermost.png"
