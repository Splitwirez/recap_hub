<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rctr="clr-namespace:ReCap.CommonUI">
    <rctr:EnumToBoolConverter x:Key="EnumToBoolConverter" />

    <ControlTheme x:Key="ReCapScrollBarThumbBase"
                TargetType="{x:Type Thumb}">
        <Setter Property="Background" Value="{DynamicResource ScrollBar.Thumb.Background.Idle}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ScrollBar.Thumb.OuterBorderBrush.Idle}" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Panel Classes="root"
                        Background="#01000000"
                        Margin="{TemplateBinding Padding}">
                        <Border x:Name="OuterBorder"
                                BoxShadow="0 0 3 #570B6CB2"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="2">
                            <Border x:Name="InnerBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{DynamicResource ScrollBar.Thumb.InnerBorderBrush.Idle}"
                                    BorderThickness="1"
                                    CornerRadius="1">
                                <DockPanel x:Name="BgOverlays">
                                    <!--
                                        Classes.horizontal="{Binding $parent[ScrollBar].Orientation, Converter={StaticResource EnumToBoolConverter}, ConverterParameter={x:Static Orientation.Horizontal}, Mode=OneWay}"
                                    -->
                                    <Rectangle Classes="end near" />
                                    <Rectangle Classes="end far" />
                                    <Rectangle />
                                </DockPanel>
                            </Border>
                        </Border>
                        <StackPanel Classes="lines"
                                    Spacing="1"
                                    Margin="3">
                        <!--
                                    Orientation="{Binding $parent[ScrollBar].Orientation, Mode=OneWay}"
                                    Classes.horizontal="{Binding $parent[ScrollBar].Orientation, Converter={StaticResource EnumToBoolConverter}, Converter={x:Static Orientation.Horizontal}, Mode=OneWay}"
                        -->
                            <Rectangle/>
                            <Rectangle/>
                            <Rectangle/>
                        </StackPanel>
                    </Panel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
                <ThicknessTransition Property="Padding" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle">
            <Setter Property="Fill" Value="{DynamicResource ScrollBar.Thumb.Background.Overlay.Idle}" />
        </Style>
        

        <Style Selector="^:pointerover:not(:pressed)">
            <Style Selector="^ /template/ Border#OuterBorder">
                <Setter Property="BorderBrush" Value="{DynamicResource ScrollBar.Thumb.OuterBorderBrush.Hover}" />
            </Style>
            <Style Selector="^ /template/ Border#InnerBorder">
                <Setter Property="Background" Value="{DynamicResource ScrollBar.Thumb.Background.Hover}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ScrollBar.Thumb.InnerBorderBrush.Hover}" />
            </Style>
            <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle">
                <Setter Property="Fill" Value="{DynamicResource ScrollBar.Thumb.Background.Overlay.Hover}" />
            </Style>
        </Style>


        <Style Selector="^:disabled">
            <Style Selector="^ /template/ Border">
                <Setter Property="Background" Value="{DynamicResource ScrollBarThumbFillDisabled}" />
            </Style>
            <Style Selector="^ /template/ StackPanel.lines > Border">
                <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector="^ /template/ StackPanel.lines">
                <Setter Property="Opacity" Value="0.5" />
            </Style>
        </Style>
    </ControlTheme>
    <ControlTheme x:Key="ReCapScrollBarThumbVertical"
                TargetType="{x:Type Thumb}"
                BasedOn="{StaticResource ReCapScrollBarThumbBase}">
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.end">
            <Setter Property="Height" Value="10" />
        </Style>
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.near">
            <Setter Property="DockPanel.Dock" Value="Top" />
            <Setter Property="OpacityMask" Value="{DynamicResource ScrollBar.Thumb.Background.OverlayMask.Top}" />
        </Style>
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.far">
            <Setter Property="DockPanel.Dock" Value="Bottom" />
            <Setter Property="OpacityMask" Value="{DynamicResource ScrollBar.Thumb.Background.OverlayMask.Bottom}" />
        </Style>

        <Style Selector="^ /template/ StackPanel.lines">
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style Selector="^ /template/ StackPanel.lines > Rectangle">
            <Setter Property="Height" Value="2" />
            <Setter Property="Fill" Value="{DynamicResource ScrollBar.Thumb.Lines.Vertical}" />
        </Style>
    </ControlTheme>
    <ControlTheme x:Key="ReCapScrollBarThumbHorizontal"
                TargetType="{x:Type Thumb}"
                BasedOn="{StaticResource ReCapScrollBarThumbBase}">
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.end">
            <Setter Property="Width" Value="10" />
        </Style>
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.near">
            <Setter Property="DockPanel.Dock" Value="Left" />
            <Setter Property="OpacityMask" Value="{DynamicResource ScrollBar.Thumb.Background.OverlayMask.Left}" />
        </Style>
        <Style Selector="^ /template/ DockPanel#BgOverlays > Rectangle.far">
            <Setter Property="DockPanel.Dock" Value="Right" />
            <Setter Property="OpacityMask" Value="{DynamicResource ScrollBar.Thumb.Background.OverlayMask.Right}" />
        </Style>

        <Style Selector="^ /template/ StackPanel.lines">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
        
        <Style Selector="^ /template/ StackPanel.lines > Rectangle">
            <Setter Property="Width" Value="2" />
            <Setter Property="Fill" Value="{DynamicResource ScrollBar.Thumb.Lines.Horizontal}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="ReCapScrollBarPageButton" TargetType="RepeatButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Opacity" Value="0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" />
            </ControlTemplate>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="ReCapScrollBarLineButtonBase"
                TargetType="{x:Type RepeatButton}">
        <Setter Property="Opacity" Value="0" />
        <Setter Property="TextElement.Foreground" Value="{DynamicResource ScrollBar.Arrow.Foreground.Idle}" />
        <Setter Property="Template">
            <ControlTemplate>
                <!--ContentPresenter Background="Transparent"
                                BorderBrush="Transparent"
                                Content="{TemplateBinding Content}"/-->
                <Panel Classes="root"
                    Height="{Binding $self.Bounds.Width, Mode=OneWay}">
                    <Path Fill="{TemplateBinding (TextElement.Foreground)}"
                        Stroke="{Binding $self.Fill}"
                        StrokeThickness="0.5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Panel>
            </ControlTemplate>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.1" />
            </Transitions>
        </Setter>


        
        <Style Selector="^:not(:disabled) /template/ Panel.root">
            <Setter Property="Background" Value="{DynamicResource ScrollBar.ArrowButton.Background}" />
        </Style>

        <Style Selector="^#PART_LineDownButton /template/ Panel.root">
            <Setter Property="RenderTransform" Value="rotate(180deg)" />
        </Style>


        <Style Selector="^:pointerover:not(:pressed)">
            <Style Selector="^ /template/ Path">
                <Setter Property="Fill" Value="{DynamicResource ScrollBar.Arrow.Foreground.Hover}" />
                <!--Setter Property="RenderTransform" Value="translate(0,0)"/-->
            </Style>
        </Style>


        <Style Selector="^:disabled">
            <Style Selector="^ /template/ Path">
                <Setter Property="Fill" Value="{DynamicResource ScrollBarButtonArrowForegroundDisabled}" />
            </Style>
        </Style>
    </ControlTheme>
    <ControlTheme x:Key="ReCapScrollBarLineButtonVertical"
                TargetType="{x:Type RepeatButton}"
                BasedOn="{StaticResource ReCapScrollBarLineButtonBase}">
        <Style Selector="^ /template/ Path">
            <Setter Property="Data" Value="{DynamicResource ScrollBar.Arrow.Geometry.Vertical}" />
        </Style>
        

        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Path">
                <Style.Animations>
                    <Animation Duration="0:0:0.25" FillMode="None">
                        <KeyFrame Cue="0%">
                            <Setter Property="Margin" Value="0" />
                        </KeyFrame>
                        <KeyFrame Cue="50%">
                            <Setter Property="Margin" Value="0,-4,0,4" />
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="Margin" Value="0" />
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
            <!--
            <Style Selector="#PART_LineUpButton /template/ Path">
                <Style.Animations>
                    <Animation Duration="0:0:0.25" FillMode="None">
                        <KeyFrame Cue="0%">
                            <Setter Property="TranslateTransform.X" Value="0" />
                        </KeyFrame>
                        <KeyFrame Cue="50%">
                            <Setter Property="TranslateTransform.X" Value="-4" />
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="TranslateTransform.X" Value="0" />
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
            <Style Selector="#PART_LineDownButton /template/ Path">
                <Style.Animations>
                    <Animation Duration="0:0:0.25" FillMode="None">
                        <KeyFrame Cue="0%">
