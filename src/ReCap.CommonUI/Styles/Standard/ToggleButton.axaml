	<Style Selector=":is(ToggleButton):checked /template/ rctr|AngledBorder#Background">
		<Setter Property="Background" Value="#C0809CAD"/>
		<Setter Property="InnerGlowColor" Value="#7FA7CBE2"/>
	</Style>
	<Style Selector=":is(ToggleButton):checked /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="TextBlock.Foreground" Value="{DynamicResource Weak1ForegroundBrush}"/>
	</Style>

	<Style Selector=":is(ToggleButton):checked:disabled /template/ rctr|AngledBorder#Background">
		<Setter Property="Background" Value="#C0AAAAAA"/>
		<Setter Property="InnerGlowColor" Value="#7FE0E0E0"/>
	</Style>
</Styles>